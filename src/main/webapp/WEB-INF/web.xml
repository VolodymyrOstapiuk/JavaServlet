<web-app  version="3.0">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>FormProcessingServlet</servlet-name>
        <servlet-class>ua.tef.controller.FormProcessingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormProcessingServlet</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.tef.controller.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>